@model NewsArticle
@{
    ViewData["Title"] = "Create News Article";
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
    var tags = ViewBag.Tags as List<Tag> ?? new List<Tag>();
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Create New News Article
                    </h4>
                </div>

                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="row">
                            <!-- Article ID (Read-only) -->
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="NewsArticleId" class="form-label">Article ID</label>
                                    <input asp-for="NewsArticleId" class="form-control" readonly />
                                    <div class="form-text">Auto-generated unique identifier</div>
                                </div>
                            </div>

                            <!-- Category -->
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category *</label>
                                    <select asp-for="CategoryId" class="form-select" required>
                                        <option value="">Select Category</option>
                                        @foreach (var category in categories.Where(c => c.IsActive == true))
                                        {
                                            <option value="@category.CategoryId">@category.CategoryName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Status - ✅ FIXED: Use simple input instead of asp-for -->
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Publication Status</label>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="newsStatus" name="NewsStatus"
                                               value="true" checked="@(Model.NewsStatus == true)" />
                                        <input type="hidden" name="NewsStatus" value="false" />
                                        <label class="form-check-label" for="newsStatus">
                                            Publish Article (Active)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="NewsTitle" class="form-label">Article Title *</label>
                            <input asp-for="NewsTitle" class="form-control" maxlength="400" required
                                   placeholder="Enter compelling article title..." />
                            <span asp-validation-for="NewsTitle" class="text-danger"></span>
                            <div class="form-text">Maximum 400 characters</div>
                        </div>

                        <!-- Headline -->
                        <div class="mb-3">
                            <label asp-for="Headline" class="form-label">Headline *</label>
                            <input asp-for="Headline" class="form-control" maxlength="150" required
                                   placeholder="Brief summary of the article..." />
                            <span asp-validation-for="Headline" class="text-danger"></span>
                            <div class="form-text">Brief summary that appears in article previews (max 150 characters)</div>
                        </div>

                        <!-- Content -->
                        <div class="mb-3">
                            <label asp-for="NewsContent" class="form-label">Article Content *</label>
                            <textarea asp-for="NewsContent" class="form-control" rows="12" maxlength="4000" required
                                      placeholder="Write your article content here..."></textarea>
                            <span asp-validation-for="NewsContent" class="text-danger"></span>
                            <div class="form-text">Main article content (max 4000 characters)</div>
                        </div>

                        <!-- Source -->
                        <div class="mb-3">
                            <label asp-for="NewsSource" class="form-label">Source</label>
                            <input asp-for="NewsSource" class="form-control" maxlength="400"
                                   placeholder="Source URL or reference..." />
                            <span asp-validation-for="NewsSource" class="text-danger"></span>
                            <div class="form-text">Optional: Source URL or reference information</div>
                        </div>

                        <!-- Tags Selection -->
                        <div class="mb-3">
                            <label class="form-label">Tags</label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                <div class="row">
                                    @if (tags.Any())
                                    {
                                        @foreach (var tag in tags)
                                        {
                                            <div class="col-md-4 col-sm-6">
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="selectedTags" value="@tag.TagId" id="tag_@tag.TagId" />
                                                    <label class="form-check-label" for="tag_@tag.TagId">
                                                        #@tag.TagName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="col-12">
                                            <p class="text-muted mb-0">No tags available.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-text">Select relevant tags for this article</div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Create Article
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
