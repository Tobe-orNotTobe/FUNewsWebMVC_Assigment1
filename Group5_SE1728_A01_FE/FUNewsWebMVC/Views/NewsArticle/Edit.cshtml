<!-- Fix cho Views/NewsArticle/Edit.cshtml -->
@model NewsArticle
@{
    ViewData["Title"] = "Edit News Article";
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
    var tags = ViewBag.Tags as List<Tag> ?? new List<Tag>();
    var selectedTags = ViewBag.SelectedTags as List<int> ?? new List<int>();
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-edit me-2"></i>Edit News Article
                        </h4>
                        <div>
                            @if (Model.NewsStatus == true)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Draft</span>
                            }
                        </div>
                    </div>
                </div>

                <form asp-action="Edit" asp-route-id="@Model.NewsArticleId" method="post">
                    <div class="card-body">
                        <!-- Article Metadata -->
                        <div class="row mb-4 p-3 bg-light rounded">
                            <div class="col-md-4">
                                <small class="text-muted">
                                    <strong>Article ID:</strong> @Model.NewsArticleId
                                </small>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">
                                    <strong>Created:</strong> @Model.CreatedDate?.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">
                                    <strong>Author:</strong> @(Model.CreatedBy?.AccountName ?? "Unknown")
                                </small>
                            </div>
                        </div>

                        <!-- Hidden fields -->
                        <input type="hidden" asp-for="NewsArticleId" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="CreatedById" />

                        <div class="row">
                            <!-- Category -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category *</label>
                                    <select asp-for="CategoryId" class="form-select" required>
                                        <option value="">Select Category</option>
                                        @foreach (var category in categories.Where(c => c.IsActive == true))
                                        {
                                            <option value="@category.CategoryId"
                                                    selected="@(Model.CategoryId == category.CategoryId)">
                                                @category.CategoryName
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Status - ✅ FIXED: Use simple input instead of asp-for -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Publication Status</label>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="newsStatus" name="NewsStatus"
                                               value="true" checked="@(Model.NewsStatus == true)" />
                                        <input type="hidden" name="NewsStatus" value="false" />
                                        <label class="form-check-label" for="newsStatus">
                                            Publish Article (Active)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="NewsTitle" class="form-label">Article Title *</label>
                            <input asp-for="NewsTitle" class="form-control" maxlength="400" required />
                            <span asp-validation-for="NewsTitle" class="text-danger"></span>
                        </div>

                        <!-- Headline -->
                        <div class="mb-3">
                            <label asp-for="Headline" class="form-label">Headline *</label>
                            <input asp-for="Headline" class="form-control" maxlength="150" required />
                            <span asp-validation-for="Headline" class="text-danger"></span>
                        </div>

                        <!-- Content -->
                        <div class="mb-3">
                            <label asp-for="NewsContent" class="form-label">Article Content *</label>
                            <textarea asp-for="NewsContent" class="form-control" rows="12" maxlength="4000" required></textarea>
                            <span asp-validation-for="NewsContent" class="text-danger"></span>
                        </div>

                        <!-- Source -->
                        <div class="mb-3">
                            <label asp-for="NewsSource" class="form-label">Source</label>
                            <input asp-for="NewsSource" class="form-control" maxlength="400" />
                            <span asp-validation-for="NewsSource" class="text-danger"></span>
                        </div>

                        <!-- Tags Selection -->
                        <div class="mb-3">
                            <label class="form-label">Tags</label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                <div class="row">
                                    @if (tags.Any())
                                    {
                                        @foreach (var tag in tags)
                                        {
                                            <div class="col-md-4 col-sm-6">
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="selectedTags" value="@tag.TagId" id="tag_@tag.TagId"
                                                           checked="@selectedTags.Contains(tag.TagId)" />
                                                    <label class="form-check-label" for="tag_@tag.TagId">
                                                        #@tag.TagName
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="col-12">
                                            <p class="text-muted mb-0">No tags available.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary me-2">
                                    <i class="fas fa-arrow-left me-1"></i>Back to List
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.NewsArticleId" class="btn btn-outline-info">
                                    <i class="fas fa-eye me-1"></i>View Article
                                </a>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Update Article
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
