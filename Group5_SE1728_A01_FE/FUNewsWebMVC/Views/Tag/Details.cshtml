@model Tag
@{
    ViewData["Title"] = "Tag Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-tag me-2"></i>
                        Tag Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tag ID:</label>
                                <p class="form-control-plaintext">@Model.TagId</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-l`abel fw-bold">Tag Name:</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-primary fs-6">#@Model.TagName</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Note:</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Note))
                            {
                                @Model.Note
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No note provided</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.TagId" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.TagId" class="btn btn-danger"
                               onclick="return confirmDelete('Are you sure you want to delete this tag?')">
                                <i class="fas fa-trash me-1"></i>
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>